@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@using MomokoBlog.Localization
@inject IHtmlLocalizer<MomokoBlogResource> L
@model MomokoBlog.Web.Pages.Posts.Post.CreateModalModel
@{
    Layout = null;
}
<abp-dynamic-form abp-model="ViewModel" data-ajaxForm="true" asp-page="CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["CreatePost"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>

<form method="post" id="ViewModel" asp-page="/Posts/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["CreatePost"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-tabs name="create-Post-modal-tabs">
                <abp-tab title="Post Information" class="mt-3">
                    <div id="post-information-wrapper" class="mt-3">
                        <abp-input asp-for="ViewModel.Title" label="@L["PostTitle"].Value" />
                        <abp-input asp-for="ViewModel.Author" label="@L["PostAuthor"].Value" />
                        <abp-input asp-for="ViewModel.Description"     size="Large" label="@L["PostDescription"].Value" />
                        <abp-select asp-for="ViewModel.ClassId" asp-items="@Model.AuthorList" label="Author">
                            <option value="" disabled="disabled">Choose a author...</option>
                        </abp-select>
                    </div>
                </abp-tab>
                <abp-tab title="Categories">
                    <div id="category-list-wrapper" class="mt-3">
                        @for (var i = 0; i < Model.Categories.Count; i++)
                        {
                            var category = Model.Categories[i];
                            <abp-input abp-id-name="@Model.Categories[i].IsSelected" asp-for="@category.IsSelected" label="@category.Name" />
                            <input abp-id-name="@Model.Categories[i].Name" asp-for="@category.Name" />
                        }
                    </div>
                </abp-tab>
            </abp-tabs>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
