@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@using MomokoBlog.Localization
@inject IHtmlLocalizer<MomokoBlogResource> L
@model MomokoBlog.Web.Pages.Posts.Post.CreateModalModel
@{
    Layout = null;
}

<form method="post" id="ViewModel" asp-page="/Posts/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["CreatePost"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-tabs name="create-Post-modal-tabs">
                <abp-tab title="Post Information" class="mt-3">
                    <div id="post-information-wrapper" class="mt-3">
                        <abp-input asp-for="ViewModel.Title" label="@L["PostTitle"].Value" />
                        <abp-input asp-for="ViewModel.Author" label="@L["PostAuthor"].Value" />
                      <abp-select asp-for="ViewModel.ClassId" asp-items="@Model.ClassificationList" label="@L["PostClassId"].Value">
                            <option value="" disabled="disabled">@L["PostChooseClassification"].Value</option>
                        </abp-select>
                        <abp-input asp-for="ViewModel.Description" size="Large" label="@L["PostDescription"].Value" />
                        <abp-input asp-for="ViewModel.Name" type="hidden"></abp-input>

                        <abp-input asp-for="ViewModel.File"></abp-input>


                        <abp-input asp-for="ViewModel.ContextValue" size="Large" label="@L["PostContextValue"].Value" />

                        <abp-radio asp-for="ViewModel.IsTop" asp-items="@Model.YesNoList" label="@L["PostIsTop"].Value" inline="true" />
                    </div>
                </abp-tab>
                <abp-tab title="Tags">
                    <div id="tag-list-wrapper" class="mt-3">
                        @for (var i = 0; i < Model.Tags.Count; i++)
                        {
                            var category = Model.Tags[i];
                            <abp-input abp-id-name="@Model.Tags[i].IsSelected" asp-for="@category.IsSelected" label="@category.Name" />
                            <input abp-id-name="@Model.Tags[i].Name" asp-for="@category.Name" />
                        }
                    </div>
                </abp-tab>
            </abp-tabs>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
