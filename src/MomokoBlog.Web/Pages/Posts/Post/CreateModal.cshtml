@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal;
@using MomokoBlog.Localization
@inject IHtmlLocalizer<MomokoBlogResource> L
@model MomokoBlog.Web.Pages.Posts.Post.CreateModalModel
 
<form data-ajaxform="false" enctype="multipart/form-data" id="ViewModel" action="/Posts/Post/CreateModal" method="post">
    <abp-card>
        <abp-card-header title="@L["CreatePost"].Value"></abp-card-header>

        <abp-card-body>
            <abp-tabs name="create-Post-modal-tabs">
                <abp-tab title="Post Information" class="mt-3">
                    <div id="post-information-wrapper" class="mt-3">
                        <abp-input asp-for="ViewModel.Title" label="@L["PostTitle"].Value" />
                        <abp-input asp-for="ViewModel.Author" label="@L["PostAuthor"].Value" />
                      <abp-select asp-for="ViewModel.ClassId" asp-items="@Model.ClassificationList" label="@L["PostClassId"].Value">
                            <option value="" disabled="disabled">@L["PostChooseClassification"].Value</option>
                        </abp-select>
                        <abp-input asp-for="ViewModel.Description" size="Large" label="@L["PostDescription"].Value" />
                        <abp-input asp-for="ViewModel.File"></abp-input>
                        <abp-input asp-for="ViewModel.ContextValue" size="Large" label="@L["PostContextValue"].Value" />
                        <abp-input asp-for="ViewModel.Sort" label="@L["PostSort"].Value" />
                        <abp-select asp-for="ViewModel.PostsStatus" asp-items="@Model.PostStatusList" label="@L["PostsStatus"].Value">
                        </abp-select>
                        <abp-select asp-for="ViewModel.IsTop" asp-items="@Model.YesNoList" label="@L["PostIsTop"].Value">
                        </abp-select>
 
                    </div>
                </abp-tab>
                <abp-tab title="Tags">
                    <div id="tag-list-wrapper" class="mt-3">
                        @for (var i = 0; i < Model.Tags.Count; i++)
                        {
                            var category = Model.Tags[i];
                            <abp-input abp-id-name="@Model.Tags[i].IsSelected" asp-for="@category.IsSelected" label="@category.Name" />
                            <input abp-id-name="@Model.Tags[i].Name" asp-for="@category.Name" />
                        }
                    </div>
                </abp-tab>
            </abp-tabs>
        </abp-card-body>
        <div class="modal-footer">
            <button class="btn btn-outline-primary" onclick="javascript:window.location.href='/Posts/Post'" type="button">返回</button>
            <button class="btn btn-primary" data-busy-text="保存中..."  id="submit" type="submit"><i class="fa fa-check"></i> <span>保存</span></button>
        </div>
    </abp-card>
 
    <link rel="stylesheet" href="/assets/vendor/ckeditor5/ckeditor5.css">
    <style>
        /* increase height of ckeditor*/
        .ck-editor__editable_inline {
            min-height: 500px;
        }
    </style>
    <script type="importmap">

        {
            "imports": {
                "ckeditor5": "/assets/vendor/ckeditor5/ckeditor5.js",
                "ckeditor5/": "/assets/vendor/ckeditor5/"
            }
        }
    </script>
    <script type="module" src="/assets/vendor/ckeditor5/ckeditor5.js"></script>
    <script type="module" src="/assets/vendor/ckeditor5config.js"></script>

    <script type="text/javascript">  
        
    </script>

       <style>
        .modal-dialog{max-width:1500px;}
       </style>
 

</form>
